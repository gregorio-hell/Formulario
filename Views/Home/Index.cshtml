@{
    ViewData["Title"] = "Home Page";
}




<h2>Formulario de Contacto</h2>
<form asp-action="Contacto" asp-controller="Home">
    <label for="nombre">Nombre:</label>
    <input type="text" id="nombre" name="nombre" placeholder="Tu nombre" required><br><br>
    <label for="correo">Correo electrónico:</label>
    <input type="email" id="correo" name="correo" placeholder="tu@email.com" required><br><br>
    <label for="asunto">Asunto:</label>
    <input type="text" id="asunto" name="asunto" placeholder="Asunto" required><br><br>
    <label for="mensaje">Mensaje:</label><br>
    <textarea id="mensaje" name="mensaje" rows="4" cols="40" placeholder="Escribe tu mensaje aquí..." required></textarea><br><br>
    <button type="submit">Enviar</button>
</form>
<p>@ViewData["mensaje"]</p>
